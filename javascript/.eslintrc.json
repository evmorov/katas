{
  "env": {
    "es6": true,
    "jest": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "BigInt": true
  },
  "plugins": [
    "mocha",
    "chai-friendly"
  ],
  "rules": {
    "chai-friendly/no-unused-expressions": 2,
    "comma-dangle": 1,
    "func-names": "off",
    "import/no-dynamic-require": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*Test*.js"
        ]
      }
    ],
    "import/prefer-default-export": "off",
    "mocha/prefer-arrow-callback": 2,
    "no-console": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "no-unused-expressions": 0,
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "vars": "all",
        "varsIgnorePattern": "^_"
      }
    ],
    "object-curly-newline": "off",
    "prefer-arrow-callback": 0,
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "asyncArrow": "always",
        "named": "never"
      }
    ]
  }
}
